<Window x:Class="WindowAreaCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window Area Calculator" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Ikkunan Leveys (cm):"/>
            <TextBox Name="txtWidth" Width="100" Margin="0,0,0,10"/>

            <TextBlock Text="Ikkunan Korkeus (cm):"/>
            <TextBox Name="txtHeight" Width="100" Margin="0,0,0,10"/>

            <TextBlock Text="Karmipuun Leveys (cm):"/>
            <TextBox Name="txtFrameWidth" Width="100" Margin="0,0,0,10"/>

            <Button Content="Laske" Click="CalculateButton_Click" Width="100"/>

            <TextBlock Name="lblResult" Margin="0,20,0,0"/>

            <Canvas Name="canvas" Width="300" Height="200" Background="LightGray" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

